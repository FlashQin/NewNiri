<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/drawable_suggst_onebig"
    android:paddingTop="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*新会员"
            android:textColor="#FF7B16"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical"
            android:background="@drawable/drawable_system_lin"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="5000 "
                android:visibility="gone"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/txtup"
                android:layout_width="90dp"
                android:layout_height="match_parent"

                android:background="@drawable/bg_sjaj"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_sj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="Up"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="1"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#fff2cb97"
            android:background="@drawable/bg_sz"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/txt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="You can withdraw order commission on sign up day"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="2"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#fff2cb97"
            android:background="@drawable/bg_sz"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/txt22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="The number of orders that can be swiped is 20"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="3"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#fff2cb97"
            android:background="@drawable/bg_sz"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/txt33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="The promotion rebate is 12%/8%/5%"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="4"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#fff2cb97"
            android:background="@drawable/bg_sz"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/txt34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="The promotion rebate is 12%/8%/5%"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtbaifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:text="Each order you can get 0.6% commission rate"
        android:textColor="#ff000000"
        android:textSize="13sp" />
</LinearLayout>