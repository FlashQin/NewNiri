<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_sjb"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="330dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="Are you ready to\n upgrade your membership?"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="You can more momey"
        android:textColor="#ffffffff"
        android:textSize="15sp" />

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btnsure"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_bulebac_big"
        android:gravity="center"
        android:text="Hold on"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btncancle"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/drawable_suggst_onebigda"
        android:gravity="center"
        android:text="Yes, ready"
        android:textColor="#FF7B16"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>