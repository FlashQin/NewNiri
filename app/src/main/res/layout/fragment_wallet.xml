<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linbacbase"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#246FE9"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linbacpic"
        android:layout_width="match_parent"
        android:background="@drawable/bg_wallet"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_height="310dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/drawable_walltouming"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/txttabone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Bitcoin"
                android:gravity="center_horizontal"
                android:background="@drawable/drawable_wallone"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txttabtwo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="NGN"
                android:gravity="center_horizontal"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet "
                android:textColor="#ff000000"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="58dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/txt1"
                app:layout_constraintBottom_toBottomOf="@id/txt1"
                app:layout_constraintLeft_toRightOf="@id/txt1"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:background="@drawable/drawable_task_lin"
                android:layout_height="18dp">

                <ImageView
                    android:layout_width="11dp"
                    android:background="@drawable/icon_dj1"
                    android:layout_height="9dp"/>

                <TextView
                    android:id="@+id/txtlv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Super"
                    android:textColor="#ffff7b16"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linexit"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign out"
                    android:layout_marginRight="3dp"
                    android:textStyle="bold"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:background="@drawable/icon_tc"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/txt1"
                android:background="@drawable/drawable_wallet_yuan1"
                android:layout_marginTop="5dp"
                android:layout_height="23dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="12dp"
                    android:background="@drawable/icon_yh"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="12dp"/>
                <TextView
                    android:id="@+id/txthi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img1"
                    android:layout_marginLeft="5dp"
                    android:text="Hi 7248220416"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="ID:71038008"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conbacpic"
            android:layout_width="match_parent"

            android:background="@drawable/bg_qb"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="153dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="16dp"
                android:background="@drawable/icon_rs"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="19dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="68dp"
                android:text="NGN credit balance"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/img2"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtblance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@id/img2"
                app:layout_constraintTop_toBottomOf="@id/txt3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffffff"
                android:textSize="26sp"
                />
            <LinearLayout
                android:id="@+id/linwd"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="70dp"
                android:gravity="center_vertical"
                android:background="@drawable/drawable_wallet_wd"
                android:layout_height="25dp">
                <ImageView

                    android:layout_width="12dp"
                    android:background="@drawable/icon_wd"
                    android:layout_marginLeft="8dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="withdraw"
                    android:textColor="#ff000000"
                    android:textSize="12sp" />
                <ImageView

                    android:layout_width="3.45dp"
                    android:background="@drawable/icon_yjt"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="6dp"
                    android:layout_height="5.75dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linre"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/linwd"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/drawable_wallet_wd2"
                android:layout_height="25dp">
                <ImageView

                    android:layout_width="12dp"
                    android:background="@drawable/icon_tx"
                    android:layout_marginLeft="8dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="recharge"
                    android:textColor="#ff000000"
                    android:textSize="12sp" />
                <ImageView

                    android:layout_width="3.45dp"
                    android:background="@drawable/icon_yjt"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="6dp"
                    android:layout_height="5.75dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/btnexit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/drawable_exit"
            android:gravity="center"
            android:text="Sair"
            android:textColor="@color/white" >

            <ImageView
                android:layout_width="16dp"
                android:background="@drawable/icon_tc"
                android:layout_height="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:textColor="#ff401c00"
                android:textSize="17sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>