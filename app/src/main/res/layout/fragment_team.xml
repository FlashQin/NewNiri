<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7B16"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linbar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_top_team"
                android:orientation="vertical"
                android:paddingTop="55dp"

                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to be a good leader?"
                    android:textColor="#ff000000"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:background="@drawable/drawable_suggst_one"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgyou"
                        android:layout_width="310dp"
                        android:layout_height="281dp"
                        android:background="@drawable/bg_jzt_top"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vocês"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="38dp"
                        android:textColor="#ffffffff"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/txtamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="140dp"
                        android:text="Amount "
                        android:textColor="#ff000000"
                        android:textSize="11sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/icon_am"
                        app:layout_constraintBottom_toBottomOf="@id/txtamount"
                        app:layout_constraintRight_toLeftOf="@id/txtamount"
                        app:layout_constraintTop_toTopOf="@id/txtamount" />

                    <TextView
                        android:id="@+id/txtamountnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        app:layout_constraintRight_toRightOf="@id/txtamount"
                        app:layout_constraintTop_toBottomOf="@id/txtamount" />

                    <ImageView
                        android:layout_width="5.5dp"
                        android:layout_height="4.9dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/icon_xjt"
                        app:layout_constraintRight_toRightOf="@id/txtamountnum"
                        app:layout_constraintTop_toBottomOf="@id/txtamountnum" />


                    <TextView
                        android:id="@+id/txtperson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="25dp"
                        android:text="Persons "
                        android:textColor="#ff000000"
                        android:textSize="11sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/icon_am"
                        app:layout_constraintBottom_toBottomOf="@id/txtperson"
                        app:layout_constraintLeft_toRightOf="@id/txtperson"
                        app:layout_constraintTop_toTopOf="@id/txtperson" />

                    <TextView
                        android:id="@+id/txtpersonnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="@id/txtperson"
                        app:layout_constraintTop_toBottomOf="@id/txtperson" />

                    <ImageView
                        android:layout_width="5.5dp"
                        android:layout_height="4.9dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/icon_xjt"
                        app:layout_constraintLeft_toLeftOf="@id/txtpersonnum"
                        app:layout_constraintTop_toBottomOf="@id/txtpersonnum" />


