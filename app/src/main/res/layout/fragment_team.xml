                    app:layout_constraintTop_toBottomOf="@+id/txt6"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="10dp"
                    android:text=" ₦"
                    android:layout_marginTop="10dp"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/txtjiangnum"
                    app:layout_constraintTop_toTopOf="@id/txtjiangnum"
                    app:layout_constraintLeft_toRightOf="@id/txtjiangnum" />
                <TextView
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtjiangnum"

                    android:layout_height="wrap_content"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/dfsgsd"
                android:layout_height="wrap_content"/>
