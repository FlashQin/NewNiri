                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />
                    <TextView
                        android:id="@+id/txtb3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="@id/txtb2"
                        app:layout_constraintBottom_toBottomOf="@id/txtb2"
                        app:layout_constraintLeft_toRightOf="@id/txtb2"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />

                    <TextView
                        android:id="@+id/txtc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="       5%\nC    C    C"
                        android:layout_marginTop="155dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam2"
                        />
                    <TextView
                        android:id="@+id/txtc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        app:layout_constraintTop_toTopOf="@id/txtc2"
                        app:layout_constraintBottom_toBottomOf="@id/txtc2"
                        app:layout_constraintRight_toLeftOf="@id/txtc2"
                        android:layout_marginRight="30dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />
                    <TextView
                        android:id="@+id/txtc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="@id/txtc2"
                        app:layout_constraintBottom_toBottomOf="@id/txtc2"
                        app:layout_constraintLeft_toRightOf="@id/txtc2"
                        android:layout_marginLeft="40dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />

                    <TextView
                        android:id="@+id/txtd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="           3%\nD    D    D    D"
                        android:layout_marginTop="195dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam2"
                        />
                    <TextView
                        android:id="@+id/txtd1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        app:layout_constraintTop_toTopOf="@id/txtd2"
                        app:layout_constraintBottom_toBottomOf="@id/txtd2"
                        app:layout_constraintRight_toLeftOf="@id/txtd2"
                        android:layout_marginRight="40dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />
                    <TextView
                        android:id="@+id/txtd3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="@id/txtd2"
                        app:layout_constraintBottom_toBottomOf="@id/txtd2"
                        app:layout_constraintLeft_toRightOf="@id/txtd2"
                        android:layout_marginLeft="50dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />

                    <TextView
                        android:id="@+id/txte2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="               1%\nE     E     E     E     E"
                        android:layout_marginTop="240dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam2"
                        />
                    <TextView
                        android:id="@+id/txte1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        app:layout_constraintTop_toTopOf="@id/txte2"
                        app:layout_constraintBottom_toBottomOf="@id/txte2"
                        app:layout_constraintRight_toLeftOf="@id/txte2"
                        android:layout_marginRight="55dp"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dpteam"
                        />
                    <TextView
                        android:id="@+id/txte3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="@id/txte2"
                        app:layout_constraintBottom_toBottomOf="@id/txte2"
                        app:layout_constraintLeft_toRightOf="@id/txte2"
