<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/drawable_suggst_one"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgpic"
        android:layout_width="144dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7.5dp"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_height="79dp"/>
    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgpic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Food"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff333333"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/txtmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000"
        app:layout_constraintTop_toBottomOf="@id/imgpic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:textColor="#fff54029"
        android:textSize="13sp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        app:layout_constraintBottom_toBottomOf="@+id/txtmoney"
        app:layout_constraintRight_toLeftOf="@+id/txtmoney"
        android:textColor="#fff54029"
        android:layout_marginBottom="1dp"
        android:textSize="9sp"
        />
    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btnsure"
        android:layout_width="match_parent"
        android:text="Get order"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtmoney"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/drawable_taskitem2"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_height="27dp"/>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsure"
        android:layout_height="11dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>